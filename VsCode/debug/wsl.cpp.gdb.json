    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/dump_debug_info",
            "args" : ["/mnt/c/tmp/BXLT96002.dbg"],
            "stopAtEntry": false,
            "cwd" : "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description" : "Enable pretty-printing for gdb",
                    "text": "-eable-pretty-printing",
                    "ignoreFailures": true
                }
            ],           
          }
    ]
}